{
  "name": "@codify-dev/api-server",
  "version": "0.1.1",
  "description": "API server for Codify Dev - HTTP API bridge to browser extension.",
  "bin": "dist/index.mjs",
  "files": [
    "README.md",
    "dist/**/*"
  ],
  "type": "module",
  "main": "dist/index.mjs",
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/index.ts",
    "test": "tsx scripts/test-api.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs",
    "lint:fix": "eslint . --ext .ts,.mts,.cts,.js,.mjs,.cjs --fix",
    "format": "oxfmt --ignore-path ../../.gitignore",
    "format:check": "oxfmt --ignore-path ../../.gitignore --check"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "hono": "^4.7.10",
    "nanoid": "^5.1.6",
    "pino": "^10.0.0",
    "pino-pretty": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/ws": "^8.5.12",
    "tsdown": "^0.19.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chenaey/codify-dev.git",
    "directory": "packages/api-server"
  },
  "keywords": [
    "codify",
    "figma",
    "design-to-code",
    "api-server",
    "design-tools"
  ],
  "author": "chenaey",
  "homepage": "https://github.com/chenaey/codify-dev#readme",
  "bugs": {
    "url": "https://github.com/chenaey/codify-dev/issues"
  }
}
